<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jm.kiosk.mapper.MenuMapper">
    <select id="selectAllMenus" resultType="MenuDTO">
        SELECT * FROM MENU
    </select>
    
    <insert id="insertOrder" useGeneratedKeys="true" keyProperty="order_id" parameterType="com.jm.kiosk.DTO.OrderDTO">
    	INSERT INTO ORDERS (TOTAL_PRICE)
    	VALUES (#{total_price})
    </insert>
    
    <insert id="insertOrderItem">
    	INSERT INTO ORDER_ITEM (ORDER_ID, MENU_NAME, PRICE, QUANTITY)
    	VALUES
    	<foreach collection="list" item="orders" separator=",">
    		(#{orderId}, #{orders.name}, #{orders.price}, #{orders.quantity})
    	</foreach>
    </insert>
</mapper>